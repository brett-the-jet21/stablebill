generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  company   String?
  createdAt DateTime  @default(now())
  invoices  Invoice[]
}

model Client {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  invoices  Invoice[]
}

model Invoice {
  id          String        @id @default(cuid())
  token       String        @unique
  status      InvoiceStatus @default(DRAFT)

  amountUsd   Int
  stablecoin  String        @default("USDC")
  chain       String        @default("BASE")
  memo        String?

  payTo       String
  dueDate     DateTime?

  userId      String
  user        User          @relation(fields: [userId], references: [id])

  clientId    String
  client      Client        @relation(fields: [clientId], references: [id])

  createdAt   DateTime      @default(now())
  sentAt      DateTime?
  paidAt      DateTime?

  payments    Payment[]
}

model Payment {
  id          String   @id @default(cuid())
  invoiceId   String
  invoice     Invoice  @relation(fields: [invoiceId], references: [id])

  txHash      String?
  chain       String?
  amountUsd   Int?
  confirmedAt DateTime?

  createdAt   DateTime @default(now())
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  OVERDUE
}
